<HomeScreen>:
    name: "home"
    MDFloatLayout:
        md_bg_color: app.theme_cls.primary_dark

    MDLabel:
        text: "BIENVENUE"
        font_style: "H4"
        theme_text_color: "Custom"
        text_color: "white"
        halign: "center"
        pos_hint: {"center_y":0.77, "center_x":0.5}
        bold: True

    MDLabel:
        text: "a l'"
        italic: True
        theme_text_color: "Custom"
        text_color: "black"
        halign: "center"
        pos_hint: {"center_y":0.73, "center_x":0.5}
        bold: True


    MDLabel:
        text: "UNIVERSITE ESPOIR D'AFRIQUE"
        font_style: "H4"
        theme_text_color: "Custom"
        text_color: "white"
        halign: "center"
        pos_hint: {"center_y":0.65, "center_x":0.5}
        bold: True

    MDLabel:
        text: "Gestion academique"
        font_style: "Subtitle1"
        theme_text_color: "Custom"
        text_color: "lightgrey"
        halign: "center"
        pos_hint: {"center_y":0.58, "center_x":0.5}

    MDLabel:
        id: label1
        text: "Excellence-Savoir-Innovation"
        theme_text_color: "Custom"
        pos_hint: {"center_y":0.54, "center_x":0.5}
        text_color: app.theme_cls.accent_color
        italic: True
        halign: "center"
        opacity: 1
        font_size: "18sp"

    #FitImage:
        #source: "assets/FB.jpg"
