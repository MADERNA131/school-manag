    MDFillRoundFlatButton:
        id: nouv_btn
        text: "Nouveaux Etudiants"
        size_hint: (0.7, 0.07)
        icon: "login"
        height: dp(50)
        theme_text_color: "Custom"
        text_color: "white"
        icon_color: "white"
        md_bg_color: app.theme_cls.accent_color
        pos_hint: {"center_y":0.4, "center_x":0.5}
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "nouv_etud"


    MDFillRoundFlatButton:
        id: login_etd
        text: "Se Connecter"
        size_hint: (0.7, 0.07)
        icon: "login"
        height: dp(50)
        theme_text_color: "Custom"
        text_color: "white"
        icon_color: "white"
        md_bg_color: app.theme_cls.primary_light
        pos_hint: {"center_y":0.3, "center_x":0.5}
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "etud_login"

