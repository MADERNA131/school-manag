<ProfCoursScreen>
    name: "ens_cours"
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Mes cours"
            left_action_items: [["arrow-left", lambda x: app.back_button_enscours()]]
            elevation: 2

        ScrollView:
            do_scroll_x: False
            bar_width: 0
            effect_cls: "ScrollEffect"  # Pour le scrolling fluide
            MDBoxLayout:
                id: mes_cours_box
                orientation: "vertical"
                padding: "10dp"
                spacing: "10dp"
                size_hint_y: None
                height: self.minimum_height