<EtudNoteScreen>
    name: "etud_note"
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Mes Notes"
            left_action_items: [["arrow-left", lambda x: app.back_button4()]]

        ScrollView:
            do_scroll_x: False
            bar_width: 0
            effect_cls: "ScrollEffect"  # Pour le scrolling fluide
            MDBoxLayout:
                id: note_box
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: "10dp"
                padding: "10dp"